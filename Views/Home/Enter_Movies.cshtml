@{
    ViewBag.Title = "Enter Movies";
}

@model MovieSite.Models.Movie

@* Form to submit a film *@
<body>
    <form asp-action="Enter_Movies" method="post">
        <label asp-for="Category">Category:</label>
        <input id="Category" asp-for="Category" />
        <br />
        <label asp-for="Title">Title: </label>
        <input id="Title" asp-for="Title" />
        <br />
        <label asp-for="Year">Year: </label>
        <input id="Year" asp-for="Year" />
        <br />
        <label asp-for="Director">Director: </label>
        <input id="Director" asp-for="Director" />
        <br />
        <label asp-for="Rating">Rating: </label>
        <select id="Rating" asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="UR">UR</option>
            <option value="NR">NR</option>
            <option value="TV-14">TV-14</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-Y7">TV-Y7</option>
        </select>
        <br />
        <label asp-for="Edited">Edited: </label>
        <select id="Edited" asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="False">No</option>
        </select>
        <br />
        <label asp-for="Lent_To">Lent To: </label>
        <input id="Lent_To" asp-for="Lent_To" />
        <br />
        <label asp-for="Notes">Notes: </label>
        <input id="Notes" asp-for="Notes" />
        <br />
        <br />
        <button type="submit" id="submitButton">Save Movie</button>
        <div asp-validation-summary="All"></div>
    </form>
</body>