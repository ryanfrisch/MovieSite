@{
    ViewBag.Title = "Enter Movies";
}

@model MovieSite.Models.Movie

@* Form to submit a film *@
<div>
    <form asp-action="Enter_Movies" method="post" class="form-group align-content-center">
        <div class="form-row">
            <label asp-for="Category">Category:</label>
            <input class="form-control" id="Category" asp-for="Category" />
        </div>
        <div class="form-row">
            <label asp-for="Title">Title: </label>
            <input class="form-control" id="Title" asp-for="Title" />
        </div>
        <div class="form-row">
            <label asp-for="Year">Year: </label>
            <input class="form-control" id="Year" asp-for="Year" />
        </div>
        <div class="form-row">
            <label asp-for="Director">Director: </label>
            <input class="form-control" id="Director" asp-for="Director" />
        </div>
        <div class="form-row">
            <label asp-for="Rating">Rating: </label>
            <select class="form-control" id="Rating" asp-for="Rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="UR">UR</option>
                <option value="NR">NR</option>
                <option value="TV-14">TV-14</option>
                <option value="TV-PG">TV-PG</option>
                <option value="TV-Y7">TV-Y7</option>
            </select>
        </div>
        <div class="form-row">
            <label asp-for="Edited">Edited: </label>
            <select class="form-control" id="Edited" asp-for="Edited">
                <option value="">Select One</option>
                <option value="true">Yes</option>
                <option value="False">No</option>
            </select>
        </div>
        <div class="form-row">
            <label asp-for="Lent_To">Lent To: </label>
            <input class="form-control" id="Lent_To" asp-for="Lent_To" />
        </div>
        <div class="form-row">
            <label asp-for="Notes">Notes: </label>
            <input class="form-control" id="Notes" asp-for="Notes" />
        </div>
        <br />
        <button class="btn btn-primary" type="submit" id="submitButton">Save Movie</button>
        <br />
        <div class="alert alert-light" asp-validation-summary="All"></div>
    </form>
</div>