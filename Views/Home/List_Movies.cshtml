@{

    ViewBag.Title = "List Movies";
}


@model IEnumerable<MovieSite.Models.Movie>


<body>
    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
        </thead>
        <tbody>
            @foreach (MovieSite.Models.Movie x in Model)
            {   
                // Makes sure the film displayed isn't independence day.
                @if (x.Title != "Independence Day")
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.Lent_To</td>
                        <td>@x.Notes</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>